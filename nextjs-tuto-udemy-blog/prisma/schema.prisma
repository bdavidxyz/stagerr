generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id  String  @id @default(cuid())
  createdAt DateTime @default(now())
  title String
  slug  String  @unique
  content String @db.Text
  image String?
  view Int @default(0)
  nbComments Int @default(0)

  // user

  // category
}